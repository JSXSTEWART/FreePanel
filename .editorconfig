# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Blade templates
[*.blade.php]
indent_size = 4

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Configuration files
[*.{xml,html}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Composer and npm lockfiles
[{composer.lock,package-lock.json}]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab
